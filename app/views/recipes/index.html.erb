<%= form_tag ("/index"), method: "get" do %>
  <%= label_tag( "Search for:") %>
  <%= text_field_tag(:search) %>
  <%= submit_tag("Search") %>
<% end %>

<table border ="1">
  <tr>
    <th>Image_url</th>
    <th>Name</th>
    <th>Rank</th>
  </tr>
  <% @recipes.each do |recipe| %>
  <tr>
      <td><%= link_to image_tag(recipe["image_url"],size:"100x100"),recipe["f2f_url"] %> </td>
      <td><%= link_to(sanitize(recipe["title"]),recipe["f2f_url"])  %> </td>
      <td><%= recipe["social_rank"] %> </td>
  </tr>
  <% end %>
  <p>Powered By Food2Fork.com</p>
</table>